<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/quizbg"
    android:background="@drawable/animated_background"
    android:padding="16dp">

    <!-- Quiz Content (Perfectly Centered) -->
    <LinearLayout
        android:id="@+id/quizContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Question will appear here"
            android:textSize="22sp"
            android:textColor="@color/colorSecondary"
            android:fontFamily="@font/baloo2_bold"
            android:gravity="center"
            android:lineSpacingExtra="-10dp"
            android:maxLines="10"
            android:ellipsize="end"
            android:layout_marginHorizontal="24dp" />

        <Button
            android:id="@+id/optionA"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="16sp"
            android:backgroundTint="@color/colorOnPrimary"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/nunito_bold"
            android:onClick="onAnswerClick"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/optionB"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="16sp"
            android:backgroundTint="@color/colorOnPrimary"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/nunito_bold"
            android:onClick="onAnswerClick"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/optionC"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="16sp"
            android:backgroundTint="@color/colorOnPrimary"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/nunito_bold"
            android:onClick="onAnswerClick" />
    </LinearLayout>

    <!-- Overlay Previous Button -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_prev"
        android:contentDescription="Previous"
        android:background="@drawable/circle_white"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onPrevClick" />

    <!-- Overlay Audio Button -->
    <ImageButton
        android:id="@+id/btnAudio"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_volume"
        android:contentDescription="Audio"
        android:background="@drawable/circle_white"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onAudioClick" />

</androidx.constraintlayout.widget.ConstraintLayout>
